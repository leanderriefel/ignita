{
  "extends": "@ignita/typescript",
  "compilerOptions": {
    "lib": ["ES2022", "dom", "dom.iterable"],
    "jsx": "preserve",
    "baseUrl": ".",
    "paths": {
      "~/*": ["./src/*"]
    },
    "plugins": [{ "name": "next" }],
    "types": ["vite/client"]
  },
  "include": [".", ".next/types/**/*.ts"],
  "exclude": ["node_modules"]
}
