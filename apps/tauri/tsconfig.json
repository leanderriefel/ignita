{
  "extends": "@nuotes/typescript/app",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*", "../../packages/components/src/*"]
    },
    "types": ["vite/client"]
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "vite.config.ts",
    "../../packages/components/src/**/*.ts",
    "../../packages/components/src/**/*.tsx"
  ],
  "exclude": ["node_modules", "dist"]
}
