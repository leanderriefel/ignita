{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Ignita",
  "version": "0.1.0",
  "identifier": "ignita.app",
  "build": {
    "beforeDevCommand": "bun run vite:dev",
    "beforeBuildCommand": "bun run build",
    "devUrl": "http://localhost:1420",
    "frontendDist": "../dist"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "label": "main",
        "title": "Ignita",
        "width": 1500,
        "height": 900
      }
    ],
    "security": {
      "csp": null,
      "capabilities": [
        {
          "identifier": "main-capability",
          "description": "Capability for main window",
          "windows": ["main"],
          "permissions": [
            "core:default",
            "deep-link:default",
            "deep-link:allow-get-current",
            "deep-link:allow-is-registered",
            "deep-link:allow-register",
            "deep-link:allow-unregister",
            {
              "identifier": "http:default",
              "allow": [
                {
                  "url": "http://localhost:*"
                },
                {
                  "url": "https://accounts.google.com/*"
                },
                {
                  "url": "https://oauth2.googleapis.com/*"
                },
                {
                  "url": "https://www.ignita.app/*"
                },
                {
                  "url": "ignita://*"
                }
              ]
            },
            "opener:default",
            "store:default",
            "os:default",
            "fs:allow-read-text-file",
            "fs:allow-write-text-file",
            "fs:allow-read-dir",
            "fs:allow-remove",
            {
              "identifier": "fs:scope",
              "allow": [
                {
                  "path": "$APPDATA/*"
                },
                {
                  "path": "$APPCONFIG/*"
                },
                {
                  "path": "$APPCACHE/*"
                },
                {
                  "path": "$APPLOCALDATA/*"
                }
              ]
            }
          ]
        }
      ]
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  },
  "plugins": {
    "deep-link": {
      "desktop": {
        "schemes": ["ignita"]
      }
    },
    "os": {
      "all": true
    }
  }
}
