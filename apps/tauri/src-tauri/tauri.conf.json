{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "nuotes",
  "version": "0.1.0",
  "identifier": "com.nuotes.app",
  "build": {
    "beforeDevCommand": "bun run vite:dev",
    "beforeBuildCommand": "bun run build",
    "devUrl": "http://localhost:4000",
    "frontendDist": "../out"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "label": "main",
        "title": "nuotes",
        "width": 800,
        "height": 600
      }
    ],
    "security": {
      "csp": null,
      "capabilities": [
        {
          "identifier": "main-capability",
          "description": "Capability for main window",
          "windows": ["main"],
          "permissions": [
            "core:default",
            "deep-link:default",
            "deep-link:allow-get-current",
            "deep-link:allow-is-registered",
            "deep-link:allow-register",
            "deep-link:allow-unregister"
          ]
        }
      ]
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  },
  "plugins": {
    "deep-link": {
      "desktop": {
        "schemes": ["nuotes"]
      }
    }
  }
}
