{
  "$schema": "https://turborepo.com/schema.json",
  "globalDependencies": [
    ".env*"
  ],
  "globalEnv": [
    "NEXT_PUBLIC_POSTHOG_KEY",
    "NEXT_PUBLIC_POSTHOG_HOST",
    "DATABASE_URL",
    "BETTER_AUTH_SECRET",
    "AUTH_GOOGLE_ID",
    "AUTH_GOOGLE_SECRET",
    "NODE_ENV"
  ],
  "tasks": {
    "build": {
      "dependsOn": [
        "^build"
      ],
      "outputs": [
        ".next/**",
        "!.next/cache/**",
        "dist/**"
      ],
      "inputs": [
        "$TURBO_DEFAULT$",
        ".env*"
      ],
      "env": [
        "NEXT_PUBLIC_*",
        "DATABASE_URL",
        "BETTER_AUTH_SECRET",
        "AUTH_GOOGLE_ID",
        "AUTH_GOOGLE_SECRET",
        "NODE_ENV"
      ]
    },
    "dev": {
      "cache": false,
      "persistent": true,
      "env": [
        "NEXT_PUBLIC_*",
        "DATABASE_URL",
        "BETTER_AUTH_SECRET",
        "AUTH_GOOGLE_ID",
        "AUTH_GOOGLE_SECRET",
        "NODE_ENV"
      ]
    },
    "lint": {},
    "format": {
      "cache": false
    },
    "typecheck": {
      "env": [
        "NODE_ENV"
      ]
    },
    "db:push": {
      "cache": false,
      "env": [
        "DATABASE_URL"
      ]
    },
    "db:studio": {
      "cache": false,
      "persistent": true,
      "env": [
        "DATABASE_URL"
      ]
    }
  }
}